<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle"
            android:useLevel="false" android:visible="true" >

            <corners android:radius="@dimen/_50sdp" />
            <size android:width="@dimen/_40sdp" android:height="@dimen/_15sdp"/>
            <solid android:color="@color/custom_blue" />
            <padding android:bottom="@dimen/_5sdp" android:left="@dimen/_5sdp" android:right="@dimen/_5sdp" android:top="@dimen/_5sdp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle"
            android:useLevel="false" android:visible="true">
            <padding android:bottom="@dimen/_5sdp" android:left="@dimen/_5sdp" android:right="@dimen/_5sdp" android:top="@dimen/_5sdp"/>
            <solid android:color="@color/yellow" />
            <size android:width="@dimen/_40sdp" android:height="@dimen/_15sdp"/>
            <corners android:radius="@dimen/_50sdp" />
        </shape>
    </item>

</selector>