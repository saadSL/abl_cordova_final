<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/nav_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_inst"
                android:layout_margin="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03XX-XXX801"
                android:textColor="@color/black"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/et_otp1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:hint="0"
                    android:background="@drawable/transparent_secondary_bg"
                    android:layout_margin="10sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_otp2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent_secondary_bg"
                    android:hint="0"
                    android:maxLength="1"
                    android:layout_margin="10sp"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_otp3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent_secondary_bg"
                    android:hint="0"
                    android:maxLength="1"
                    android:layout_margin="10sp"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_otp4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent_secondary_bg"
                    android:hint="0"
                    android:layout_margin="10sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_otp5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent_secondary_bg"
                    android:hint="0"
                    android:layout_margin="10sp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et_otp6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/transparent_secondary_bg"
                    android:hint="0"
                    android:inputType="number"
                    android:layout_margin="10sp"
                    android:maxLength="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:00 Minute"
                android:layout_gravity="right"
                android:layout_margin="20sp"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50sp"
                android:text="@string/OTP_question"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/linkForOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OTP_link"
                android:textColor="@color/purple_700"
                android:layout_margin="5sp"
                android:textColorLink="@color/purple_700"
                android:layout_gravity="center_horizontal"/>

            <include layout="@layout/gen_buttons"/>

<!--            <Button-->
<!--                android:id="@+id/btn_otp_verify"-->
<!--                android:text="Verify"-->
<!--                android:layout_marginTop="60sp"-->
<!--                android:layout_width="230dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:background="@drawable/rounded_corner_bg"-->
<!--                android:padding="10dp"-->
<!--                android:textAllCaps="false"-->
<!--                android:textColor="@color/white"/>-->

<!--            <Button-->
<!--                android:id="@+id/btn_cancel"-->
<!--                android:layout_width="230dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="20sp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:background="@drawable/transparent_bg"-->
<!--                android:text="Cancel"-->
<!--                android:padding="10sp"-->
<!--                android:textAllCaps="false"-->
<!--                android:textColor="@color/primary"/>-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>