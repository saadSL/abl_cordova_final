<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/heading_additional_applicant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/additional_applicant_heading"
        android:fontFamily="@font/worksans_semibold"
        android:textColor="@color/heading_black"
        android:layout_margin="@dimen/_10sdp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white"
        android:layout_margin="@dimen/_10sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relationship"
            android:fontFamily="@font/worksans_semibold"
            android:textColor="@color/heading_black"
            android:layout_margin="@dimen/_10sdp"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_relationship_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_spinner"
            android:layout_margin="@dimen/_10sdp"
            android:hint="@string/enter_relationship"
            android:fontFamily="@font/worksans_regular"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>