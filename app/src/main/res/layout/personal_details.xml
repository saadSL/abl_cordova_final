<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_personal_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Personal details 1 -->
    <LinearLayout
        android:id="@+id/ll_personal_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name will be pre populated"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father/ Husband Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father name will be pre populated"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNIC Issuance Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="24/5/2018 (Pre-populated)"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNIC Expiry Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="24/5/2018 (Pre-populated)"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <Button
            android:id="@+id/bt_next_pd1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_bg"
            android:padding="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_cancel_pd1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_bg"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primary" />
    </LinearLayout>
    <!-- Personal details 2 -->
    <LinearLayout
        android:id="@+id/ll_personal_info1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email (Optional)"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your email address"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Ayesha"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_mother_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_mother_name"
                android:layout_alignParentTop="true"
                android:text="Aaira"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_mother_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_mother_name1"
                android:layout_alignParentTop="true"
                android:text="Ayera"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/btn_mother_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_below="@id/btn_mother_name2"
                android:layout_alignParentStart="true"
                android:text="Sana bibi"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_mother_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_mother_name3"
                android:layout_below="@id/btn_mother_name1"
                android:text="Fatima"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_mother_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_mother_name4"
                android:layout_below="@id/btn_mother_name2"
                android:text="Ayaan Ali"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place of birth"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_birth_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Lahore"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_birth_place1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_birth_place"
                android:layout_alignParentTop="true"
                android:text="Karachi"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_birth_place2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_birth_place1"
                android:layout_alignParentTop="true"
                android:text="Lodhran"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/btn_birth_place3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_below="@id/btn_birth_place2"
                android:layout_alignParentStart="true"
                android:text="Britain"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_birth_place4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_birth_place3"
                android:layout_below="@id/btn_birth_place1"
                android:text="Canada"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>
            <Button
                android:id="@+id/btn_birth_place5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:padding="10dp"
                android:layout_toRightOf="@id/btn_birth_place4"
                android:layout_below="@id/btn_birth_place2"
                android:text="Larkana"
                android:textAllCaps="false"
                android:textColor="@color/primary"/>


        </RelativeLayout>

        <Button
            android:id="@+id/bt_next_pd2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_bg"
            android:padding="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_cancel_pd2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_bg"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primary" />
    </LinearLayout>
    <!-- Personal details 3 -->
    <LinearLayout
        android:id="@+id/ll_personal_info2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Mailing address"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/tv_address"
                android:textColor="@color/red"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_address"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Town/Tehsil"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_town"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/tv_city"
                android:textColor="@color/red"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:entries="@array/city"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_city"
                android:backgroundTint="@color/yellow"
                android:theme="@style/primary_color"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pakistan"
                android:layout_below="@id/tv_country"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_landline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landline Number (Optional)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_landline_number"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/bt_next_pd3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_bg"
            android:padding="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_cancel_pd3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_bg"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primary" />
    </LinearLayout>
</LinearLayout>