<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_personal_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Personal details 1 -->


    <!-- Personal details 3 -->
    <LinearLayout
        android:id="@+id/ll_personal_info2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Mailing address"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="Address"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/tv_address"
                android:textColor="@color/red"/>

            <EditText
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_address"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="Town/Tehsil"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular" />

            <EditText
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_town"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="City"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/tv_city"
                android:textColor="@color/red"/>

            <Spinner
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:entries="@array/city"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_city"
                android:backgroundTint="@color/yellow"
                android:theme="@style/primary_color"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="Country"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"/>


            <EditText
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pakistan"
                android:layout_below="@id/tv_country"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_landline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:text="Landline Number (Optional)"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"/>

            <EditText
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pre-filled address loaded from CNIC"
                android:layout_below="@id/tv_landline_number"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/bt_next_pd3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_bg"
            android:padding="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/bt_cancel_pd3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_bg"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primary" />
    </LinearLayout>
</LinearLayout>